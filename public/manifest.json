{
  "manifest_version": 2,

  "name": "Github Profile",
  "description": "Add a github profile tab",
  "version": "1.0",

  "icons": {
    "16": "icon@16.png",
    "48": "icon@48.png",
    "128": "icon@128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["js/vendor.js", "js/content_script.js"]
    }
  ],

  "background": {
    "scripts": ["js/vendor.js", "js/background.js"]
  },

  "permissions": ["https://*.github.com/*", "webRequest"]
}
